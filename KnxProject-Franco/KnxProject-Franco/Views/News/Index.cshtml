@using KnxProject_Franco.CONTRACTS.Entities
@model IEnumerable<NewsModel>

@{
    ViewBag.Title = "Noticias";
}


<div class="fh5co-blog-style-1">
    <div class="container">
        <div class="row p-b">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2 class="fh5co-heading wow fadeInUp" data-wow-duration="1s" data-wow-delay=".5s"> Actualidad </h2>
                <p class="wow fadeInUp" data-wow-duration="1s" data-wow-delay=".8s">Aquí está el último contenido sobre el contexto actual, ya sea en el ámbito local, nacional o internacional. </p>
            </div>
        </div>
        <div class="row p-b">
            @foreach (var n in Model)
            {
                <div class="col-md-4 col-sm-6 col-xs-6 col-xxs-12" > <!-- style_prevu_kit-->
                    <div class="fh5co-post wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1.1s">
                        <div class="fh5co-post-image">
                            <div class="fh5co-overlay"></div>
                            <div class="fh5co-category"><a href="#">@foreach (var scope in ViewBag.Scopes)
                            {
                                if (scope.IDScope == @n.IDScope)
                                {
                                    @scope.Description
                                }
                            }</a></div>
                            <img src="~/Content/img/News/@n.ImageURL" alt=@n.Title class="img-responsive">
                        </div>                      
                        <div class="fh5co-post-text">
                            <h3><a href=/News/Details/@n.IDNew>@n.Title</a></h3>
                            <hr />
                            <p><strong>@n.Place</strong>&nbsp;-&nbsp;<em>@n.LetterHead</em></p>
                        </div>                        
                        <div class="fh5co-post-meta">
                            <a href="#"><i class="icon-chat"></i></a>
                            <a href="#"><i class="icon-clock2"></i></a>
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix visible-sm-block"></div>
        </div>
        @*<div class="row">
                <div class="col-md-4 col-md-offset-4 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay="2s">
                    <a href="#" class="btn btn-primary btn-lg">Ver todas las noticias</a>
                </div>
            </div>*@<div class="row">
            <div class="col-md-4 col-md-offset-4 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay="2s">
                <a href="#" class="btn btn-primary btn-lg"></a>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
