@model IEnumerable<KnxProject_Franco.CONTRACTS.Entities.LawyerModel>

@{
    ViewBag.Title = "IndexLawyers";
}

<div class="fh5co-team-style-3" style="background-color:dimgrey !important;">
    <div class="container">
        <div class="row p-b">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2 class="fh5co-heading" style="font-family:'PlayFair Display'">Nuestro bufete de abogados</h2>
                <p style="font-family:Merriweather, Times, serif !important; font-size:20px; color:#cccccc !important;">Para poder ayudarte contamos con profesionales del más alto nivel, recibidos de importantes universidades y con una trayectoria que los ampara ante cualquier situación.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var lawyer in Model)
            {
                <div class="col-md-4 text-center">
                    <div class="person">
                        <img src="~/Content/img/Lawyers/@lawyer.ImageName" class="img-responsive img-rounded" alt="Person">
                        <h3 style="font-family:'PlayFair Display'" class="name">@lawyer.FirstName @lawyer.LastName</h3>
                        <div class="position">@foreach (var cb in ViewBag.CourtBranches)
                        {
                            if (cb.IDCourtBranch == lawyer.IDCourtBranch)
                            {
                                <p>@cb.Name</p>
                                <p>Contratado el: @lawyer.ContractDate</p>
                                <ul class="social social-circle">
                                    <li><a href="http://www.linkedin.com/@lawyer.FirstName@lawyer.LastName"><i class="icon-linkedin"></i></a></li>
                                </ul>
                            }
                        } </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>