@model IEnumerable<KnxProject_Franco.CONTRACTS.Entities.LawyerModel>

@{
    ViewBag.Title = "IndexLawyers";
}

<div class="fh5co-team-style-3">
    <div class="container">
        <div class="row p-b">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2 class="fh5co-heading">Nuestro equipo</h2>
                <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. </p>
            </div>
        </div>
        <div class="row">
            @foreach (var lawyer in Model)
            {
                <div class="col-md-4 text-center">
                    <div class="person">
                        <img src="~/Content/img/Lawyers/@lawyer.ImageName" class="img-responsive img-rounded" alt="Person">
                        <h3 class="name">@lawyer.FirstName @lawyer.LastName</h3>
                        <div class="position">@foreach (var cb in ViewBag.CourtBranches)
                        {
                            if (cb.IDCourtBranch == lawyer.IDCourtBranch)
                            {
                                @cb.Name
                            }
                        } </div>
                        <p>Contratado el: @lawyer.ContractDate</p>                        
                        <ul class="social social-circle">
                            <li><a href="http://www.linkedin.com"><i class="icon-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>