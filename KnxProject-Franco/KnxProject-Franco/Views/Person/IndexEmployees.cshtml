@model IEnumerable<KnxProject_Franco.CONTRACTS.Entities.EmployeeModel>

@{
    ViewBag.Title = "IndexEmployees";
}
<div class="fh5co-team-style-3">
    <div class="container">
        <div class="row p-b">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2 class="fh5co-heading">Nuestro equipo</h2>
            </div>
        </div>
        <div class="row">
           @foreach (var employee in Model)
            {
            <div class="col-md-4 text-center">
                <div class="person">
                    <img src="~/Content/img/Employees/@employee.ImageName" class="img-responsive" alt="@employee.FirstName @employee.LastName">
                    <h3 class="name">@employee.FirstName @employee.LastName</h3>
                    <div class="position"></div>
                    <p>Contratado el: @employee.ContractDateE</p>
                    <ul class="social social-circle">
                        <li><a href="http://www.linkedin.com"><i class="icon-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
           }
        @*@Html.ActionLink("Edit", "Edit", new { id=item.IDPerson }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDPerson }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDPerson })*@
        </div>
    </div>
</div>

        


