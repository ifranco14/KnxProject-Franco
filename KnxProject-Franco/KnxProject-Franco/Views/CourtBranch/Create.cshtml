            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="element_8">Abogados dentro de la rama </label>
            <div class="col-md-10">              
                @foreach (var l in ViewBag.Lawyers)
                {
                    <input id="CourtBranches" name="CourtBranches" class="element checkbox" type="checkbox" value="1" />
                    <label class="choice" for="@l.IDLawyer">@l.FirstName @l.LastName</label>
                }
            </div>
        </div>

